<h1><%= @guest.name + ", " + @guest.occupation.capitalize %></h1>
<b>Episode List:</b>
<ul>
<% @guest.show_rating.each do |a| %>
    <li><b>Date:</b> <%= link_to a.episode.date, episode_path(a.episode) %><br>
    <b>Rating:</b> <%= a.rating %></li><br>
<% end %>
</ul>
<%= button_to "Add new appearance", new_appearance_path, method: :get %><br>
<%= button_to "All guests", guests_path, method: :get %>