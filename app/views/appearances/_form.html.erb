

<%= form_for @appearance do |f| %>
    <%= f.label :guest_id %>
    <%= f.collection_select :guest_id, Guest.all, :id, :name %>
    <br>
    <%= f.label :episode_id %>
    <%= f.collection_select :episode_id, Episode.all, :id, :date %>
    <br>
    <%= f.label :rating %>
    <%= f.number_field :rating %>
    <br>
    <%= f.submit %>
<% end %>


<% if flash[:errors] %>
    <ul>
        <h3>You have the following errors with submission: </h3>
        <% flash[:errors].each do |msg| %>
           <li style="color: red; font-weight: bold"> <%= msg %></li>
        <% end %>
    </ul>
<% end %>

