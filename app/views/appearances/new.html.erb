<h1>Appearance Form</h1>

<% if flash[:errors] %>
    <h4>Error!</h4>
    <% flash[:errors].each do |error| %>
        <p><em>- <%= error %></em></p>
    <% end %>
<% end %>

<%= form_for @appearance do |f| %>
    <%= f.label :guest %>
    <%= f.collection_select :guest_id, @guests, :id, :name  %><br><br>

    <%= f.label :episode %>
    <%= f.collection_select :episode_id, @episodes, :id, :number %><br><br>

    <%= f.label :rating %>
    <%= f.number_field :rating %>
    <span><em>(from 1(low) to 5(high))</em></span><br><br>

    <%= f.submit "Submit Form"%>

<% end %>