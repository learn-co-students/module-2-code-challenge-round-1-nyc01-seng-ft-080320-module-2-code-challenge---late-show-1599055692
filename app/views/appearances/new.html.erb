<h1>New appearance form</h1>
<% if flash[:my_errors] %>
    <ul>
    <% flash[:my_errors].each do |error| %>
        <li><%= error %></li>
    <% end %>
    </ul>
<% end %>

<%= form_for @appearance do |f| %>
<%= f.label :guest_id %>
<%= f.collection_select :guest_id, Guest.all, :id, :name, {selected: flash[:guest_id]} %><br>

<%= f.label :episode_id %>
<%= f.collection_select :episode_id, Episode.all, :id, :number, {selected: flash[:episode_id]} %><br>

<%= f.label :rating %>
<%= f.number_field :rating, {value: flash[:rating]} %><br>

<%= f.submit %>
<% end %>