<h1> New Appearance </h1>

<% if flash[:my_errors] %>
    <% flash[:my_errors].each do |error| %>
        <%= error %>
    <% end %>    
<% end %>

<%= form_for @appearance do |f| %>
    <p><%= f.label :guest_id %>
    <%= f.collection_select :guest_id, Guest.all, :id, :name %></p>

    <p><%= f.label :episode_id %>
    <%= f.collection_select :episode_id, Episode.all, :id, :number %></p>

    <p><%= f.label :rating %>
    <%= f.number_field :rating %></p>

    <%= f.submit %>

<% end %>